<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>Syndicate</defName>
    <label>Syndicate</label>
    <description>A collection of Businesses, Mercenary groups, Usurped Factions and various fanatic groups that would otherwise have been eradicated had they not come together as a collective, while they work together they are as morally bankrupt as pirates and value their own gain above all else even over their fellow collaborates.</description>
    <pawnsPlural>Syndicate</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <permanentEnemy>true</permanentEnemy>
    <leaderTitle>Syndrone</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/PirateOutpost</factionIconPath>
    <factionNameMaker>NamerFactionPirate</factionNameMaker>
    <techLevel>Spacer</techLevel>
    <earliestRaidDays>80</earliestRaidDays>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
      </li>
    </backstoryFilters>
    <hairTags>
      <li>Punk</li>
      <li>Urban</li>
    </hairTags>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Syndrone>200</Syndrone>
          <Operative>5</Operative>
          <SwordMaster>20</SwordMaster>
          <SyndieBomber>100</SyndieBomber>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>
</Defs>
